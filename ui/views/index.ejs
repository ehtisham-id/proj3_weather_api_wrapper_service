<%- include('header', { title: 'Weather Query - Weather API Service' }) %>

    <style>
        .weather-query-container {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 2rem;
            animation: fadeIn 0.8s ease-out;
        }

        .query-panel {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--shadow-md);
            height: fit-content;
            position: sticky;
            top: 100px;
            animation: slideRight 0.6s ease-out;
        }

        @keyframes slideRight {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .query-panel h2 {
            font-size: 1.75rem;
            color: var(--dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
            background: #f3f4f6;
            padding: 0.5rem;
            border-radius: 10px;
        }

        .tab-btn {
            flex: 1;
            padding: 0.75rem;
            border: none;
            background: transparent;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            color: var(--gray);
        }

        .tab-btn.active {
            background: white;
            color: var(--primary);
            box-shadow: var(--shadow-sm);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s ease-out;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            transform: translateY(-2px);
        }

        .btn-query {
            width: 100%;
            padding: 1rem;
            background: var(--gradient-1);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-query:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
        }

        .results-panel {
            animation: slideLeft 0.6s ease-out;
        }

        @keyframes slideLeft {
            from {
                opacity: 0;
                transform: translateX(50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .results-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow-md);
            margin-bottom: 1.5rem;
        }

        .results-header h2 {
            font-size: 1.5rem;
            color: var(--dark);
        }

        .weather-result-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--shadow-md);
            animation: scaleIn 0.6s ease-out;
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .location-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .location-icon {
            font-size: 2.5rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .location-info h3 {
            font-size: 1.5rem;
            color: var(--dark);
            margin-bottom: 0.25rem;
        }

        .location-meta {
            color: var(--gray);
            font-size: 0.85rem;
        }

        .current-weather-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .weather-metric {
            text-align: center;
            padding: 1.5rem;
            background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .weather-metric:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .metric-icon {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .metric-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .metric-label {
            color: var(--gray);
            font-size: 0.875rem;
        }

        .hourly-section {
            margin-top: 2rem;
        }

        .hourly-section h4 {
            font-size: 1.25rem;
            color: var(--dark);
            margin-bottom: 1.5rem;
        }

        .hourly-scroll {
            display: flex;
            gap: 1rem;
            overflow-x: auto;
            padding-bottom: 1rem;
            scrollbar-width: thin;
            scrollbar-color: var(--primary) #e5e7eb;
        }

        .hourly-scroll::-webkit-scrollbar {
            height: 8px;
        }

        .hourly-scroll::-webkit-scrollbar-track {
            background: #e5e7eb;
            border-radius: 4px;
        }

        .hourly-scroll::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 4px;
        }

        .hourly-card {
            min-width: 120px;
            background: white;
            padding: 1.25rem;
            border-radius: 12px;
            text-align: center;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
            animation: fadeInStagger 0.5s ease-out both;
        }

        .hourly-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .hourly-card:nth-child(2) {
            animation-delay: 0.15s;
        }

        .hourly-card:nth-child(3) {
            animation-delay: 0.2s;
        }

        .hourly-card:nth-child(4) {
            animation-delay: 0.25s;
        }

        .hourly-card:nth-child(5) {
            animation-delay: 0.3s;
        }

        @keyframes fadeInStagger {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hourly-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .hourly-time {
            font-size: 0.875rem;
            color: var(--gray);
            margin-bottom: 0.75rem;
            font-weight: 600;
        }

        .hourly-temp {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0.5rem 0;
        }

        .hourly-details {
            font-size: 0.75rem;
            color: var(--gray);
            margin-top: 0.5rem;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--gray);
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
            opacity: 0.3;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .api-key-selector {
            margin-bottom: 1.5rem;
        }

        @media (max-width: 968px) {
            .weather-query-container {
                grid-template-columns: 1fr;
            }

            .query-panel {
                position: static;
            }
        }
    </style>

    <div class="weather-query-container">
        <div class="query-panel">
            <h2>üå§Ô∏è Query Weather</h2>

            <div class="form-tabs">
                <button class="tab-btn active" onclick="switchTab('coordinates')">Coordinates</button>
                <button class="tab-btn" onclick="switchTab('location')">City/Country</button>
            </div>

            <form action="/weather/query" method="POST">
                <div class="api-key-selector">
                    <label for="apiKey" class="form-label">Select API Key</label>
                    <select name="apiKey" id="apiKey" class="form-input" required>
                        <option value="">Select an API key...</option>
                        <!-- API keys will be populated dynamically -->
                    </select>
                </div>

                <input type="hidden" name="queryType" id="queryType" value="coordinates">

                <div id="coordinates-tab" class="tab-content active">
                    <div class="form-group">
                        <label for="lat" class="form-label">Latitude</label>
                        <input type="text" id="lat" name="lat" class="form-input" placeholder="40.7128" step="any">
                    </div>

                    <div class="form-group">
                        <label for="lon" class="form-label">Longitude</label>
                        <input type="text" id="lon" name="lon" class="form-input" placeholder="-74.0060" step="any">
                    </div>
                </div>

                <div id="location-tab" class="tab-content">
                    <div class="form-group">
                        <label for="city" class="form-label">City</label>
                        <input type="text" id="city" name="city" class="form-input" placeholder="New York">
                    </div>

                    <div class="form-group">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="country" class="form-input" placeholder="USA">
                    </div>
                </div>

                <button type="submit" class="btn-query">
                    <span>üîç</span>
                    Get Weather Data
                </button>
            </form>
        </div>

        <div class="results-panel">
            <div class="results-header">
                <h2>üìä Weather Results</h2>
            </div>

            <% if (typeof weather !=='undefined' && weather) { %>
                <div class="weather-result-card">
                    <div class="location-header">
                        <span class="location-icon">üìç</span>
                        <div class="location-info">
                            <h3>
                                <%= weather.location.city || 'Location' %>, <%= weather.location.country || 'N/A' %>
                            </h3>
                            <p class="location-meta">
                                Lat: <%= weather.location.latitude %>¬∞ |
                                    Lon: <%= weather.location.longitude %>¬∞ |
                                        Elevation: <%= weather.location.elevation %>m
                            </p>
                        </div>
                    </div>

                    <div class="current-weather-grid">
                        <div class="weather-metric">
                            <div class="metric-icon">üå°Ô∏è</div>
                            <div class="metric-value">
                                <%= weather.current.temperature %>¬∞C
                            </div>
                            <div class="metric-label">Temperature</div>
                        </div>
                        <div class="weather-metric">
                            <div class="metric-icon">üí®</div>
                            <div class="metric-value">
                                <%= weather.current.windSpeed %> km/h
                            </div>
                            <div class="metric-label">Wind Speed</div>
                        </div>
                        <div class="weather-metric">
                            <div class="metric-icon">üïê</div>
                            <div class="metric-value">
                                <%= new Date(weather.current.time).getHours() %>:00
                            </div>
                            <div class="metric-label">Current Time</div>
                        </div>
                    </div>

                    <div class="hourly-section">
                        <h4>üìà Hourly Forecast</h4>
                        <div class="hourly-scroll">
                            <% weather.hourly.forEach(hour=> { %>
                                <div class="hourly-card">
                                    <div class="hourly-time">
                                        <%= new Date(hour.time).getHours() %>:00
                                    </div>
                                    <div class="hourly-temp">
                                        <%= hour.temperature %>¬∞C
                                    </div>
                                    <div class="hourly-details">üíß <%= hour.humidity %>%</div>
                                    <div class="hourly-details">üí® <%= hour.windSpeed %> km/h</div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>
                <% } else if (typeof error !=='undefined' && error) { %>
                    <div class="weather-result-card">
                        <div class="alert alert-error">
                            <strong>Error:</strong>
                            <%= error %>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="weather-result-card">
                            <div class="empty-state">
                                <div class="empty-icon">‚òÅÔ∏è</div>
                                <h3>No Weather Data Yet</h3>
                                <p>Enter coordinates or city/country to fetch weather information</p>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>

    <script>
        function switchTab(tab) {
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

            event.target.classList.add('active');
            document.getElementById(tab + '-tab').classList.add('active');
            document.getElementById('queryType').value = tab === 'coordinates' ? 'coordinates' : 'location';
        }

        // Fetch user's API keys and populate dropdown
        async function loadApiKeys() {
            try {
                const response = await fetch('/dashboard/api-keys');
                const data = await response.json();
                const select = document.getElementById('apiKey');

                data.keys.forEach(key => {
                    const option = document.createElement('option');
                    option.value = key.apiKey;
                    option.textContent = `Key #${key.id.substring(0, 8)}...`;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Failed to load API keys:', error);
            }
        }

        // loadApiKeys();
    </script>

    <%- include('footer') %>