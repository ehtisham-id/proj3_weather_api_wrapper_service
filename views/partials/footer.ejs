<script>
    // Initialize AOS
    AOS.init({
        duration: 1000,
        once: true,
        offset: 100
    });

    // Initialize Particles.js
    particlesJS("particles-js", {
        particles: {
            number: { value: 60, density: { enable: true, value_area: 800 } },
            color: { value: "#ffffff" },
            shape: { type: "circle" },
            opacity: { value: 0.4, random: true },
            size: { value: 3, random: true },
            line_linked: {
                enable: true,
                distance: 150,
                color: "#ffffff",
                opacity: 0.2,
                width: 1
            },
            move: {
                enable: true,
                speed: 1.5,
                direction: "none",
                random: true,
                straight: false,
                out_mode: "out",
                bounce: false
            }
        },
        interactivity: {
            detect_on: "canvas",
            events: {
                onhover: { enable: true, mode: "repulse" },
                onclick: { enable: true, mode: "push" }
            }
        }
    });

    // Enhanced Back to Top with GSAP animation
    window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset;
        const backToTop = document.getElementById('backToTop');
        const scrollProgress = document.querySelector('.scroll-progress');
        const navbar = document.querySelector('.navbar');

        // Back to Top Button
        if (scrollTop > 300) {
            backToTop.classList.add('show');
            gsap.to(backToTop, { scale: 1, duration: 0.3 });
        } else {
            backToTop.classList.remove('show');
        }

        // Scroll Progress Indicator
        const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
        const progress = (scrollTop / scrollHeight) * 100;
        gsap.to(scrollProgress, { width: progress + '%', duration: 0.3 });

        // Navbar Shadow Effect
        if (scrollTop > 50) {
            navbar.style.boxShadow = '0 8px 32px rgba(31, 38, 135, 0.37)';
            navbar.style.backdropFilter = 'blur(20px)';
        } else {
            navbar.style.boxShadow = 'none';
            navbar.style.backdropFilter = 'blur(10px)';
        }
    });

    // Smooth Back to Top with GSAP
    document.getElementById('backToTop').addEventListener('click', () => {
        gsap.to(window, { scrollTo: 0, duration: 1.2, ease: "power3.inOut" });
    });

    // Enhanced Floating Weather Card Animation
    const weatherCard = document.getElementById('floatingWeather');
    let mouseX = 0, mouseY = 0;

    document.addEventListener('mousemove', (e) => {
        mouseX = (e.clientX - window.innerWidth / 2) * 0.01;
        mouseY = (e.clientY - window.innerHeight / 2) * 0.01;
    });

    function animateWeatherCard() {
        const time = Date.now() * 0.001;
        const moveX = Math.sin(time) * 5 + mouseX;
        const moveY = Math.cos(time * 1.5) * 3 + mouseY;
        const rotate = Math.sin(time * 0.8) * 2;

        weatherCard.style.transform = `
                translateX(${moveX}px) 
                translateY(${moveY}px) 
                rotate(${rotate}deg)
            `;

        requestAnimationFrame(animateWeatherCard);
    }
    animateWeatherCard();

    // Interactive Logo Animation
    const logo = document.getElementById('logo');
    if (logo) {
        logo.addEventListener('mouseenter', () => {
            gsap.to('.logo-icon', {
                rotation: 360,
                duration: 0.8,
                ease: "back.out(1.7)"
            });
            gsap.to('.logo-dot', {
                scale: 1.5,
                duration: 0.3,
                yoyo: true,
                repeat: 1
            });
        });
    }

    // Dropdown Menu Animations
    document.querySelectorAll('.dropdown-toggle').forEach(toggle => {
        toggle.addEventListener('click', function () {
            const arrow = this.querySelector('.dropdown-arrow');
            if (arrow) {
                gsap.to(arrow, {
                    rotation: this.getAttribute('aria-expanded') === 'true' ? 0 : 180,
                    duration: 0.3
                });
            }
        });
    });

    // Menu Item Hover Effects
    document.querySelectorAll('.profile-item').forEach(item => {
        item.addEventListener('mouseenter', function () {
            gsap.to(this, {
                x: 5,
                duration: 0.2,
                ease: "power2.out"
            });
            const arrow = this.querySelector('.menu-arrow');
            if (arrow) {
                gsap.to(arrow, {
                    x: 3,
                    duration: 0.2
                });
            }
        });

        item.addEventListener('mouseleave', function () {
            gsap.to(this, {
                x: 0,
                duration: 0.2
            });
            const arrow = this.querySelector('.menu-arrow');
            if (arrow) {
                gsap.to(arrow, {
                    x: 0,
                    duration: 0.2
                });
            }
        });
    });

    // Notification Bell Animation
    const notificationBell = document.getElementById('notificationBell');
    if (notificationBell) {
        notificationBell.addEventListener('click', function () {
            gsap.to(this, {
                rotation: 360,
                duration: 0.5,
                onComplete: () => {
                    gsap.to(this, { rotation: 0, duration: 0.5 });
                }
            });
        });
    }

    // FAB Button Interactions
    const mainFab = document.getElementById('mainFab');
    const themeToggle = document.getElementById('themeToggle');

    if (mainFab) {
        mainFab.addEventListener('click', function () {
            document.querySelectorAll('.sub-fab').forEach(fab => {
                fab.classList.toggle('show');
            });
            gsap.to(this, { rotation: 360, duration: 0.5 });
        });
    }

    if (themeToggle) {
        themeToggle.addEventListener('click', function () {
            document.body.classList.toggle('dark-mode');
            const icon = this.querySelector('i');
            if (icon) {
                icon.classList.toggle('fa-moon');
                icon.classList.toggle('fa-sun');
            }
        });
    }

    // Weather Card Refresh
    const weatherRefresh = document.getElementById('weatherRefresh');
    if (weatherRefresh) {
        weatherRefresh.addEventListener('click', function () {
            gsap.to(this, { rotation: 360, duration: 0.5 });
            // Simulate weather data refresh
            const temps = ['22°', '24°', '26°', '20°', '18°'];
            const conditions = ['Sunny', 'Cloudy', 'Rainy', 'Clear', 'Stormy'];
            const randomTemp = temps[Math.floor(Math.random() * temps.length)];
            const randomCondition = conditions[Math.floor(Math.random() * conditions.length)];

            document.querySelector('.temp').textContent = randomTemp;
            document.querySelector('.condition').textContent = randomCondition;
        });
    }

    // Avatar Hover Effect
    document.querySelectorAll('.avatar-wrapper').forEach(avatar => {
        avatar.addEventListener('mouseenter', function () {
            const ring = this.querySelector('.avatar-ring');
            if (ring) {
                gsap.to(ring, {
                    scale: 1.2,
                    borderWidth: '3px',
                    duration: 0.3
                });
            }
        });

        avatar.addEventListener('mouseleave', function () {
            const ring = this.querySelector('.avatar-ring');
            if (ring) {
                gsap.to(ring, {
                    scale: 1,
                    borderWidth: '2px',
                    duration: 0.3
                });
            }
        });
    });

    // Settings Fab Click
    const settingsFab = document.getElementById('settingsFab');
    if (settingsFab) {
        settingsFab.addEventListener('click', () => {
            alert('Settings feature coming soon!');
        });
    }

    // Help Fab Click
    const helpFab = document.getElementById('helpFab');
    if (helpFab) {
        helpFab.addEventListener('click', () => {
            alert('Need help? Contact support@weatherapp.com');
        });
    }
</script>

