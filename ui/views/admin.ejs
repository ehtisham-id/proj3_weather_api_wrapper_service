<%- include('header', { title: 'Admin Dashboard - Weather API Service' }) %>

    <style>
        .admin-header {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            padding: 3rem 2rem;
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            color: white;
            animation: slideDown 0.6s ease-out;
        }

        .admin-header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .admin-badge {
            background: rgba(255, 255, 255, 0.3);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .admin-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .admin-stat-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem;
            border-radius: 16px;
            box-shadow: var(--shadow-md);
            text-align: center;
            transition: all 0.3s ease;
            animation: fadeInUp 0.6s ease-out both;
        }

        .admin-stat-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .admin-stat-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .admin-stat-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .admin-stat-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .admin-stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .stat-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
        }

        .stat-title {
            color: var(--gray);
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        .users-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: var(--shadow-md);
            animation: fadeIn 0.8s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .section-header h2 {
            font-size: 1.75rem;
            color: var(--dark);
        }

        .search-box {
            display: flex;
            align-items: center;
            background: white;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .search-box:focus-within {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        .search-box input {
            border: none;
            outline: none;
            padding: 0.5rem;
            font-size: 0.95rem;
            width: 250px;
        }

        .users-grid {
            display: grid;
            gap: 1rem;
        }

        .user-card {
            background: white;
            box-shadow: var(--shadow-sm);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            animation: scaleIn 0.5s ease-out both;
        }

        .user-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .user-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .user-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .user-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-3px);
        }

        .user-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: var(--gradient-1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .user-details h3 {
            font-size: 1rem;
            color: var(--dark);
            margin-bottom: 0.25rem;
        }

        .user-email {
            color: var(--gray);
            font-size: 0.85rem;
        }

        .role-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .role-admin {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .role-user {
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary);
        }

        .user-stats {
            display: flex;
            gap: 2rem;
            margin: 1rem 0;
            padding: 1rem;
            background: #f3f4f6;
            border-radius: 8px;
        }

        .user-stat {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .user-stat-label {
            color: var(--gray);
            font-size: 0.85rem;
        }

        .user-stat-value {
            font-weight: 700;
            color: var(--primary);
        }

        .user-actions {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .btn-action {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-admin {
            background: var(--gradient-2);
            color: white;
        }

        .btn-admin:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger);
        }

        .btn-danger:hover {
            background: var(--danger);
            color: white;
        }

        .tokens-list {
            margin-top: 1rem;
        }

        .tokens-header {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .token-item {
            background: #f9fafb;
            padding: 0.5rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.75rem;
            color: var(--gray);
            margin-bottom: 0.25rem;
            word-break: break-all;
        }

        @media (max-width: 768px) {
            .admin-header h1 {
                font-size: 2rem;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .user-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .user-stats {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>

    <div class="admin-header">
        <h1>
            üëë Admin Dashboard
            <span class="admin-badge">ADMIN</span>
        </h1>
        <p>Manage users and monitor system statistics</p>
    </div>

    <% if (typeof success !=='undefined' && success==='admin_granted' ) { %>
        <div class="alert alert-success">
            ‚úÖ Admin privileges granted successfully!
        </div>
        <% } %>

            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-error">
                    <strong>Error:</strong>
                    <%= error %>
                </div>
                <% } %>

                    <div class="admin-stats">
                        <div class="admin-stat-card">
                            <div class="stat-icon">üë•</div>
                            <div class="stat-number">
                                <%= users.length %>
                            </div>
                            <div class="stat-title">Total Users</div>
                        </div>
                        <div class="admin-stat-card">
                            <div class="stat-icon">üëë</div>
                            <div class="stat-number">
                                <%= users.filter(u=> u.role === 'admin').length %>
                            </div>
                            <div class="stat-title">Admins</div>
                        </div>
                        <div class="admin-stat-card">
                            <div class="stat-icon">üîë</div>
                            <div class="stat-number">
                                <%= users.reduce((sum, u)=> sum + (u.tokens ? u.tokens.length : 0), 0) %>
                            </div>
                            <div class="stat-title">Total API Keys</div>
                        </div>
                        <div class="admin-stat-card">
                            <div class="stat-icon">‚ö°</div>
                            <div class="stat-number">100%</div>
                            <div class="stat-title">System Health</div>
                        </div>
                    </div>

                    <div class="users-section">
                        <div class="section-header">
                            <h2>üìä User Management</h2>
                            <div class="search-box">
                                <span>üîç</span>
                                <input type="text" placeholder="Search users..." id="searchInput">
                            </div>
                        </div>

                        <div class="users-grid" id="usersGrid">
                            <% users.forEach(userData=> { %>
                                <div class="user-card" data-email="<%= userData.email %>">
                                    <div class="user-header">
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                <%= userData.email.charAt(0).toUpperCase() %>
                                            </div>
                                            <div class="user-details">
                                                <h3>
                                                    <%= userData.email %>
                                                </h3>
                                                <p class="user-email">User ID: <%= userData._id || 'N/A' %>
                                                </p>
                                            </div>
                                        </div>
                                        <span
                                            class="role-badge <%= userData.role === 'admin' ? 'role-admin' : 'role-user' %>">
                                            <%= userData.role %>
                                        </span>
                                    </div>

                                    <div class="user-stats">
                                        <div class="user-stat">
                                            <span class="user-stat-label">üîë API Keys:</span>
                                            <span class="user-stat-value">
                                                <%= userData.tokens ? userData.tokens.length : 0 %>
                                            </span>
                                        </div>
                                        <div class="user-stat">
                                            <span class="user-stat-label">üìÖ Joined:</span>
                                            <span class="user-stat-value">
                                                <%= userData.createdAt ? new
                                                    Date(userData.createdAt).toLocaleDateString() : 'N/A' %>
                                            </span>
                                        </div>
                                    </div>

                                    <% if (userData.tokens && userData.tokens.length> 0) { %>
                                        <div class="tokens-list">
                                            <div class="tokens-header">API Keys (Hashed):</div>
                                            <% userData.tokens.slice(0, 3).forEach(token=> { %>
                                                <div class="token-item">
                                                    <%= token.substring(0, 40) %>...
                                                </div>
                                                <% }); %>
                                                    <% if (userData.tokens.length> 3) { %>
                                                        <div
                                                            style="font-size: 0.85rem; color: var(--gray); margin-top: 0.5rem;">
                                                            +<%= userData.tokens.length - 3 %> more
                                                        </div>
                                                        <% } %>
                                        </div>
                                        <% } %>

                                            <div class="user-actions">
                                                <% if (userData.role !=='admin' ) { %>
                                                    <form action="/admin/make-admin/<%= userData._id %>" method="POST"
                                                        style="display: inline;">
                                                        <button type="submit" class="btn-action btn-admin">
                                                            <span>üëë</span>
                                                            Make Admin
                                                        </button>
                                                    </form>
                                                    <% } %>
                                                        <form action="/admin/delete-user/<%= userData._id %>"
                                                            method="POST" style="display: inline;"
                                                            onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                            <button type="submit" class="btn-action btn-danger">
                                                                <span>üóëÔ∏è</span>
                                                                Delete User
                                                            </button>
                                                        </form>
                                            </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <script>
                        document.getElementById('searchInput').addEventListener('input', function (e) {
                            const searchTerm = e.target.value.toLowerCase();
                            const userCards = document.querySelectorAll('.user-card');

                            userCards.forEach(card => {
                                const email = card.dataset.email.toLowerCase();
                                if (email.includes(searchTerm)) {
                                    card.style.display = 'block';
                                } else {
                                    card.style.display = 'none';
                                }
                            });
                        });
                    </script>

                    <%- include('footer') %>